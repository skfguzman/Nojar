    <script>
            window.onload = function() {
                $('#indexLink').addClass('active')
            }

        function calculate(){
            let total = parseInt($('#totalInput').val())
            let tax = parseInt($('#taxInput').val())
            let time = parseInt($('#timeInput').val())
            
            let cuota = (total * (1 + (tax/100)))/time
            console.log($('#cuota').text('RD$'+cuota.toFixed(2)))
        }
    </script>
